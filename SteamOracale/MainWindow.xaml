<Window x:Class="SteamOracale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamOracale"
        mc:Ignorable="d"
        Title="Steam Oracle" Height="450" Width="800" Background="#FF26282F">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="50"/>
		</Grid.RowDefinitions>
		<ScrollViewer>
			<!-- <StackPanel x:Name="Tree"/> -->
			<TreeView x:Name="Tree" />
		</ScrollViewer>
		<Rectangle HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" StrokeThickness="0" Fill="#FF2A2E33">
			<Rectangle.Effect>
				<DropShadowEffect ShadowDepth="5" Direction="90" Color="#FFC8D0DC" Opacity="0.5" BlurRadius="10"/>
			</Rectangle.Effect>
		</Rectangle>

	</Grid>
</Window>
